{
    "compilerOptions": {
      "target": "ESNext",
      "module": "commonjs",
      "outDir": "./dist",
      "noImplicitAny": true,
      "strict": true,
      "allowJs": true,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "declaration": true
    },
    "include": [
      "src/**/*",
    ],
    "exclude": [
      "node_modules"
    ]
  }